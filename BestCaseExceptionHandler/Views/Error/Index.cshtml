@{
    ViewBag.Title = "Error";
    var statusCode = ViewBag.StatusCode as int?;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Error</title>
</head>

<body>
    <div class=" container">
        <h1>An error has occurred.</h1>
        @if (statusCode.HasValue)
        {
            <p>Error Code: @statusCode.Value</p>
            <p>
                @switch (statusCode.Value)
                {
                    case 400:
                        <text>Bad Request: The server could not understand your request. Please review your request and try again.</text>
                        break;
                    case 401:
                        <text>Unauthorized: You do not have permission to access this page. Please log in or ensure you have the appropriate permissions.</text>
                        break;
                    case 403:
                        <text>Forbidden: You do not have permission to view this page. Contact your administrator.</text>
                        break;
                    case 404:
                        <text>Not Found: The page you are looking for does not exist. Check the URL or return to the homepage.</text>
                        break;
                    case 500:
                        <text>Internal Server Error: An error occurred on the server. Please try again later.</text>
                        break;
                    case 502:
                        <text>Bad Gateway: Received an invalid response from the upstream server. Please try again.</text>
                        break;
                    case 503:
                        <text>Service Unavailable: The server is temporarily unavailable. Please try again later.</text>
                        break;
                    case 504:
                        <text>Gateway Timeout: The server took too long to respond. Please try again.</text>
                        break;
                    default:
                        <text>Sorry, an error occurred. Please try again later.</text>
                        break;
                }
            </p>
        }
        else
        {
            <p>Sorry, an error occurred. Please try again later.</p>
        }
    </div>
</body>
</html>
